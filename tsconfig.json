{
    "compilerOptions": {
        "module": "CommonJS",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2021",
        "lib": ["ES2021"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*"]
}
